@using ModbusMaster.Domain.Entities
@model ModbusMaster.Client.Models.Modbus.TcpDeviceCreateViewModel

<h2>@Model.ChannelTitle: Create new device</h2>

<form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="@Url.Action("TcpDeviceCreate")" data-ajax-update="#_FormPartial" data-ajax-complete="LoadConfig">
    @Html.HiddenFor(model => model.ChannelId)
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="col-sm">
            @Html.DropDownListFor(model => model.Type, @Html.GetEnumSelectList<DeviceType>(), new { id = "DeviceType", @class = "form-control", channelId = @Model.ChannelId })
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Ip)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Ip, new { @class = "form-control" })
            <span asp-validation-for="Ip" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Port)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Port, new { type = "number", @class = "form-control" })
            <span asp-validation-for="Port" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
