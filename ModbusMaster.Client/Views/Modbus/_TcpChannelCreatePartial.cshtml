@using ModbusMaster.Domain.Entities
@model ModbusMaster.Client.Models.Modbus.TcpChannelCreateViewModel

<h2>Create new channel</h2>

<form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="@Url.Action("TcpChannelCreate")" data-ajax-update="#_FormPartial" data-ajax-complete="LoadConfig">
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="col-sm">
            @Html.DropDownListFor(model => model.Type, @Html.GetEnumSelectList<ChannelType>(), new { id = "ModbusType", @class = "form-control" })
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>