@using ModbusMaster.Domain.Entities
@model ModbusMaster.Client.Models.Modbus.SerialChannelEditViewModel

<h2>Editing @Model.Title</h2>

<form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="@Url.Action("SerialChannelUpdate")" data-ajax-update="#_FormPartial" data-ajax-complete="LoadConfig">
    @Html.HiddenFor(model => model.Id)
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.ComPort)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.ComPort, new { @class = "form-control" })
            <span asp-validation-for="ComPort" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Baudrate)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Baudrate, new { type = "number", @class = "form-control" })
            <span asp-validation-for="Baudrate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.Parity)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.Parity, new { @class = "form-control" })
            <span asp-validation-for="Parity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(model => model.StopBits)
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(model => model.StopBits, new { @class = "form-control" })
            <span asp-validation-for="StopBits" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        &nbsp;
        <a asp-action="ChannelRemove" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</form>
